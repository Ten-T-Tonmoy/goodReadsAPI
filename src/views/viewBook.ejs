<% include layout.ejs %> <% if (book) { %>
<div class="bg-white shadow p-4 rounded-lg">
  <h2 class="text-2xl font-bold mb-2"><%= book.title %></h2>
  <p><%= book.description %></p>
  <p class="text-sm text-gray-500">Rating: <%= avgRating.toFixed(1) %></p>
  <p class="text-sm">Genres: <%= book.genre.join(", ") %></p>
  <p class="text-sm">Writers: <%= book.writer.map(w => w.name).join(", ") %></p>
</div>

<div class="mt-6">
  <h3 class="text-xl font-semibold">Suggestions</h3>
  <div class="grid grid-cols-2 gap-4">
    <% BookSuggestionSupreme.forEach(s => { %>
    <div class="p-3 bg-gray-200 rounded">
      <p class="font-bold"><%= s.title %></p>
      <p class="text-sm"><%= s.genre.join(", ") %></p>
    </div>
    <% }) %>
  </div>
</div>
<% } else { %>
<p class="text-red-500">Book not found</p>
<% } %>
